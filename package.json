{
  "name": "standard-monorepo",
  "version": "0.2.0",
  "author": "FlÃ¡vio Carvalho",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": ">=10"
  },
  "bin": {
    "standard-monorepo": "./bin/run"
  },
  "scripts": {
    "build": "rm -rf lib && tsc -b && oclif-dev manifest && oclif-dev readme && rm -f oclif.manifest.json",
    "test": "jest",
    "version": "oclif-dev readme && git add README.md"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build && git add -A",
      "commit-msg": "./bin/run commit $HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@lerna/package-graph": "3.18.5",
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/plugin-help": "^3",
    "chalk": "4.1.0",
    "inquirer": "^7.3.3",
    "lodash": "^4.17.20",
    "glob": "7.1.5"
  },
  "devDependencies": {
    "@oclif/dev-cli": "1.24.1",
    "@types/inquirer": "^7.3.1",
    "@types/jest": "^26.0.15",
    "@types/lodash": "^4.14.165",
    "@types/node": "^10",
    "globby": "11.0.1",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "prettier": "2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node": "9.0.0",
    "tslib": "^2.0.3",
    "typescript": "^4.1.2"
  },
  "peerDependencies": {},
  "homepage": "https://github.com/imflavio/standard-monorepo",
  "bugs": "https://github.com/imflavio/standard-monorepo/issues",
  "repository": "imflavio/standard-monorepo",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "standard-monorepo",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "files": [
    "dist",
    "src",
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
